﻿@{
ViewData["Title"] = "Not Found";
Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container text-center py-5">
    <h1 class="display-1 fw-bold text-secondary">404</h1>
    <h2 class="mb-3">Page not found</h2>
    <p class="text-muted mb-4">
        The resource you're looking for doesn't exist or has been moved.
    </p>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary me-2">Home</a>
    <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary">Categories</a>
</div>